<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFirstType"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/card_color"
            tools:layout_editor_absoluteX="31dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivArticles"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toTopOf="@+id/consItem"
                    app:layout_constraintStart_toStartOf="@+id/consItem"
                    app:layout_constraintBottom_toBottomOf="@+id/consItem"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:id="@+id/tvTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Type"
                    style="@style/secondtext"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ivArticles"
                    app:layout_constraintStart_toEndOf="@+id/ivArticles"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tvSubTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Type"
                    style="@style/firsttext"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTittle"
                    app:layout_constraintStart_toEndOf="@+id/ivArticles"
                    android:layout_marginVertical="6dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Type"
                    style="@style/firsttext"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTittle"
                    app:layout_constraintStart_toEndOf="@+id/ivArticles"
                    android:layout_marginVertical="6dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish Type"
                    style="@style/secondtext"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ivArticles"
                    app:layout_constraintEnd_toEndOf="@+id/consItem"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_horizontal"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>